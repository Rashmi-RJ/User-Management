<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/admin/css/style.css">
</head>
<body>
   <%- include('../../partials/admin/header.ejs')%>

    <section id="mid">
        <div class="container">
            <div class="row">
   <%- include('../../partials/admin/left.ejs')%>
                


                <div class="col-md-8">
                    <h2>Query Management</h2>
                    <table class="table table-hover">
                        <tr>
                            <th>S.No</th>
                            <th>Customer Email</th>
                            <th>Customer Name</th>
                            <th>Customer Query</th>
                            <th>Posted date</th>
                            <th>Status</th>
                            <th>Send Mail</th>
                            <th>Action</th>
                        </tr>
                        <%queryRecord.forEach((result,key)=>{%>
                            <tr>
                                <td><%=key+1%></td>
                                <td><%=result.email%></td>
                                <td><%=result.username%></td>
                                <td><%=result.query%></td>
                                <td><%=result.postedDate%></td>
                                <td><a href="/admin/query/<%=result.id%>"><button class="btn btn-primary"><%=result.status%></button></a></td>
                                <td><a href="/admin/email/<%=result.id%>"><button class="btn btn-danger">Send Email</button></a></td>
                                <td><a href="/admin/querydelete/<%=result.id%>"><i class="bi bi-trash-fill"></i></a></td>

                            </tr>
               
                        <%})%>
                    </table>
                </div>
            </div>
        </div>
    </section>

   <%- include('../../partials/admin/footer.ejs')%>

   
</body>
</html>
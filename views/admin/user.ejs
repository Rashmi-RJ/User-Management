<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/admin/css/style.css">
</head>
<body>
   <%- include('../../partials/admin/header.ejs')%>

    <section id="mid">
        <div class="container">
            <div class="row">
   <%- include('../../partials/admin/left.ejs')%>
                


                <div class="col-md-8">
                    <h2>User's Management</h2>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-3 text-primary">Total :<%=usercount%></div>
                            <div class="col-md-3 text-danger">Active:<%=useractive%></div>
                            <div class="col-md-3 text-danger">PVT:<%=userpvt%></div>
                            <div class="col-md-3 text-danger">Public:<%=userpublic%></div>
                        </div>
                    </div>
                    <table class="table table-hover">
                        <tr>
                            <th>User Name</th>
                            <th>Status</th>
                            <th>Roles</th>
                            <th>Action</th>
                        </tr>
                        
                        <%records.forEach((result)=>{%>
                            <tr>
                          <td><%=result.username%></td>
                          <td><a href="/admin/userupdate/<%=result.id%>"><button class="btn btn-primary"><%=result.status%></button></a></td>
                          <td><a href="/admin/rolesupdate/<%=result.id%>"><button class="btn btn-primary"><%=result.roles%></button></a></td>
                          <td><a href="/admin/userdelete/<%=result.id%>"><i class="bi bi-trash-fill text-dark "></i></a></td>
                        
                        </tr>
                        <%})%>

                    </table>
                </div>
            </div>
        </div>
    </section>

   <%- include('../../partials/admin/footer.ejs')%>

   
</body>
</html>